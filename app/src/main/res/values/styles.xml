<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="buttonStyle">
        <item name="android:padding">@dimen/pad</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorButt</item>
        <item name="android:textSize">@dimen/ts</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/z</item>
    </style>

    <style name="buttonStyleLand">
        <item name="android:padding">@dimen/pad2</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">@dimen/width2</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorButt</item>
        <item name="android:textSize">@dimen/ts</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/z</item>
    </style>

</resources>
